            android:exported="false" />
        <activity
            android:name=".screen.Formularios.FormSugerirLugar"
            android:exported="false" />
        <activity
            android:name=".screen.sugerir_lugar"
            android:exported="false" />
        <activity
            android:name=".screen.activity_settings"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".screen.MapsActivity"
            android:exported="false" />
        <activity
            android:name=".screen.Info_Lugar_Select"

            android:name=".screen.Menu_navegacion_principal"
            android:exported="false" />
        <activity
            android:name=".screen.Home"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".screen.Formularios.Register_User"
            android:exported="false" />
        <activity
            android:name=".screen.Login"
            android:exported="false" />
        <activity
            android:name=".screen.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.Formularios.FormEditEmpleo">



    <EditText
        android:id="@+id/from_edit_empleo_input_localidad"
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="Barcelona, Madrid"
        android:inputType="textPersonName"
        android:maxLength="50"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_localidad_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_localidad_txt"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_localidad_txt" />

    <TextView
        android:id="@+id/from_edit_empleo_localidad_txt"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Localidad"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_input_precio" />

    <TextView
        android:id="@+id/from_edit_empleo_descipcion_txt"
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Descripcion"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_input_localidad" />

    <include
        android:id="@+id/from_edit_empleo_header"
        layout="@layout/header_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/from_edit_empleo_input_titulo"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Titulo Descriptivo de la oferta"
        android:inputType="textPersonName"
        android:maxLength="50"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_titulo_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_titulo_txt"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_titulo_txt" />

    <EditText
        android:id="@+id/from_edit_empleo_input_precio"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="precio/hora"
        android:maxLength="9"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_precio_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_precio_txt"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_precio_txt" />

    <TextView
        android:id="@+id/from_edit_empleo_titulo_txt"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Titulo"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_header" />

    <TextView
        android:id="@+id/from_edit_empleo_tipoempleo_txt"
        android:layout_width="151dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:text="Tipo Empleo "
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_input_titulo" />

    <Spinner
        android:id="@+id/from_edit_empleo_spinner_tipotrabajo"
        android:layout_width="154dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_tipoempleo_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_tipoempleo_txt"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_tipoempleo_txt" />

    <EditText
        android:id="@+id/from_edit_empleo_input_descrip_multiline"
        android:layout_width="342dp"
        android:layout_height="164dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Descripcion de la tarea maximo 250 carcateres"
        android:maxLength="250"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_descipcion_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_descipcion_txt"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_descipcion_txt" />

    <TextView
        android:id="@+id/from_edit_empleo_precio_txt"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Precio"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/from_edit_empleo_tipoempleo_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_input_titulo" />

    <Button
        android:id="@+id/from_edit_empleo_BTN_editarOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/BTN_fondo"
        android:text="Guardar Oferta"
        android:textColor="@color/BTN_letra"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_input_descrip_multiline"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/from_edit_empleo_TextError_Titulo"
        android:layout_width="336dp"
        android:layout_height="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_input_titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_input_titulo"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_input_titulo" />

    <TextView
        android:id="@+id/from_edit_empleo_TextError_precio"
        android:layout_width="149dp"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_input_precio"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_input_precio"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_input_precio" />

    <TextView
        android:id="@+id/from_edit_empleo_TextError_Spinner"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_spinner_tipotrabajo"
        app:layout_constraintStart_toStartOf="@+id/from_edit_empleo_spinner_tipotrabajo"
        app:layout_constraintTop_toBottomOf="@+id/from_edit_empleo_spinner_tipotrabajo" />

    <TextView
        android:id="@+id/from_edit_empleo_TextError_Localidad"
        android:layout_width="174dp"
        android:layout_height="22dp"
        android:layout_marginBottom="1dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/from_edit_empleo_input_localidad"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_input_localidad"
        app:layout_constraintStart_toEndOf="@+id/from_edit_empleo_localidad_txt" />

    <TextView
        android:id="@+id/from_edit_empleo_TextError_Descripcion"
        android:layout_width="172dp"
        android:layout_height="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/from_edit_empleo_input_descrip_multiline"
        app:layout_constraintEnd_toEndOf="@+id/from_edit_empleo_input_descrip_multiline"
        app:layout_constraintStart_toEndOf="@+id/from_edit_empleo_descipcion_txt" />


</androidx.constraintlayout.widget.ConstraintLayout>